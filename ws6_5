#include<stdio.h>
void main()
{
    int r,n;
    printf("enter no of elements");
    scanf("%d",&n);
    int a[n];
    printf("enter elements in hill sized manner");
    for(int i=0;i<n;i++)
    {
       scanf("%d",&a[i]);printf(" ");
    }
    printf("\n");
    for(int i=0;i<n-1;i++)
    {
        if(a[i]>a[i+1])
        {
            printf("%d %d",i,a[i]);
            break;
        }
    }    


return 0;

    
}
